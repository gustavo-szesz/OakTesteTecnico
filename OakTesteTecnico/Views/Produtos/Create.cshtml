@model OakTesteTecnico.Models.ProdutoViewModel

@{
    ViewData["Title"] = "Cadastro de Produto";
}

<h2>Cadastro de Produto</h2>

<form asp-action="Create" style="padding: 20px" method="post">
    <div class="form-group">
        <label asp-for="Nome" class="control-label text-black"></label>
        <input asp-for="Nome" class="form-control text-black" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descricao" class="control-label text-black"></label>
        <input asp-for="Descricao" class="form-control text-black" />
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Valor" class="control-label text-black"></label>
        <input asp-for="Valor" class="form-control text-black" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DisponivelParaVenda" class="control-label text-black">Disponivel para venda</label>
        <select asp-for="DisponivelParaVenda" class="form-control">
            <option value="true">Sim</option>
            <option value="false">Não</option>
        </select>
        <span asp-validation-for="DisponivelParaVenda" class="text-danger"></span>
    </div>
    <div class="text-right mt-3">
        <button type="submit" class="btn-custom">Cadastrar</button>
    </div>
</form>
